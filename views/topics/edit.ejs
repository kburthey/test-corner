<% include ../partials/header %>

<div class="ui main container">
    <div class="ui center aligned raised very padded text segment">
        <h1>Edit <%= topic.title %></h1>
        <form class="ui form" action="/corner/<%= topic._id %>/?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="topic[title]" value="<%= topic.title %>">
            </div>
            <div class="field">
                <label>Description</label>
                <input type="text" name="topic[description]" value="<%= topic.description %>">
            </div>
            <input class="ui violet big basic button" type="submit">
        </form>
    </div>
</div>

<% include ../partials/footer %>