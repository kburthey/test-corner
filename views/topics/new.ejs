<% include ../partials/header %>
<div class="ui main container">
    <div class="ui center aligned raised very padded text segment">
        <div class="ui huge header"> Create a new topic</div>
        <form class="ui form" action="/corner" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="topic[title]" placeholder="Title">
            </div>
            <div class="field">
                <label>Category</label>
                <select name="topic[category]">
                    <option value="Sports">Sports</option>
                    <option value="Entertainment">Entertainment</option>
                    <option value="Politics">Politics</option>
                    <option value="Life">Life</option>
                    <option value="Technology">Technology</option>
                    <option value="Humor">Humor</option>
                    <option value="Film">Film</option>
                </select>
            </div>
            <div class="field">
                <label>Description</label>
                <input type="text" name="topic[description]" placeholder="Description">
            </div>
            <input class="ui violet big basic button" type="submit">
        </form>
        
    </div>
    <a class="ui big basic button orange" href="/corner">Go Back</a>
</div>