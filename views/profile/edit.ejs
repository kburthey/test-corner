<% include ../partials/header %>

<div class="ui main container">
    <div class="ui center aligned raised very padded text segment">
        <h1>Edit <%= user.username %>'s Profile</h1>
        <form class="ui form" action="/profile/<%= user._id %>/?_method=PUT" method="POST">
            <div class="field">
                <label>Username</label>
                <input type="text" name="user[username]" value="<%= user.username %>">
            </div>
            <div class="field">
                <label>Name</label>
                <input type="text" name="user[name]" value="<%= user.name %>">
            </div>
            <div class="field">
                <label>City:</label>
                <input type="text" name="user[location]" value="<%= user.location %>">
            </div>
            <div class="field">
                <label>Describe Yourself:</label>
                <input type="text" name="user[info]" value="<%= user.info %>">
            </div>
            <input class="ui violet big basic button" type="submit">
        </form>
    </div>
</div>

<% include ../partials/footer %>